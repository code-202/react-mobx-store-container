{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"]
}
